<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorFrontLayer"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextView.HeadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/Base_info" />

        <include
            android:id="@+id/tvBasExperience"
            layout="@layout/item_pokemon_base_info" />

        <include
            android:id="@+id/tvCaptureRate"
            layout="@layout/item_pokemon_base_info" />

        <include
            android:id="@+id/tvHeight"
            layout="@layout/item_pokemon_base_info" />

        <include
            android:id="@+id/tvWeight"
            layout="@layout/item_pokemon_base_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/tvAgeCategory"
            layout="@layout/item_pokemon_base_info" />

        <include
            android:id="@+id/tvHabitat"
            layout="@layout/item_pokemon_base_info" />

        <include
            android:id="@+id/tvColor"
            layout="@layout/item_pokemon_base_info" />
    </LinearLayout>
</androidx.cardview.widget.CardView>