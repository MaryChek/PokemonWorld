<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/pokemonListPageFragment">
    <fragment
        android:id="@+id/pokemonListPageFragment"
        android:name="com.example.work_with_service.presentation.fragments.PokemonListPageFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_pokemon_list">
        <action
            android:id="@+id/action_pokemonListPageFragment_to_pokemonDetailPageFragment"
            app:destination="@id/pokemonDetailPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailPageFragment"
        android:name="com.example.work_with_service.presentation.fragments.PokemonDetailPageFragment"
        android:label="" >
        <argument
            android:name="pokemon"
            app:argType="com.example.work_with_service.presentation.models.Pokemon"
            app:nullable="true" />
    </fragment>
</navigation>